{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "sourceMap": true,
    "allowJs": true,
    "typeRoots": [
      "./@types/",
      "node_modules/@types/",
      "../../../../game-idl/src/@types/typescript",
    ],
    "lib": [
      "es6",
      "scripthost",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["../../../../game-idl/src/generated/main/javascript/*"]
    }
  },
  "include": [
    "./"
  ],
  "exclude": [
    "./@types/**/*",
    "./node_modules/**/*"
  ]
}