{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "downlevelIteration": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types/"
    ],
    "lib": [
      "es6",
      "scripthost",
      "dom"
    ],
    "baseUrl": "./",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "./src/@types/**/*",
    "./node_modules/**/*"
  ]
}